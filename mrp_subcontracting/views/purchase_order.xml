<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="subcontract_purchase_order_view_form" model="ir.ui.view">
            <field name="name">subcontract_purchase_order_view_form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <button type="object"
                    name="action_view_picking_out"
                    class="oe_stat_button"
                    icon="fa-truck" attrs="{'invisible':[('picking_out_ids','=',[])]}">
                    <field name="picking_out_count" widget="statinfo" string="Livraison" help="Outcoming Shipments"/>
                    <field name="picking_out_ids" invisible="1"/>
                </button>
            </xpath>
            </field>
        </record>

    </data>
</odoo>