<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="project_task_form_sub_items">
            <field name="name">project_task_form_sub_items</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <field name="description" position="after">
                    <group string="Todo">
                        <field name="item_ids" nolabel="1" colspan="2">
                            <tree editable="bottom">
                                <field name="sequence" widget="handle"/>
                                <field name="done"/>
                                <button name="toggle_done" type="object" icon="fa-check-square-o"/>
                                <field name="description"/>
                                <field name="planned_hours" widget="float_time"/>
                                <field name="is_visible_portal"/>
                            </tree>
                        </field>
                    </group>
                    <group class="oe_subtotal_footer oe_right">
                        <field name="planned_hours_amount" widget="float_time" class="oe_subtotal_footer oe_right"/>
                    </group>
                </field>
            </field>
        </record>
    </data>
</odoo>