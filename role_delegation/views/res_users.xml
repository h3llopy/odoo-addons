<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="role_delegation_view_users_form" model="ir.ui.view">
        <field name="name">role_delegation_view_users_form</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page name="delegations" string="Role delegations">
                    <group string="Role delegations" col="1">
                        <field name="delegation_ids" nolabel="1">
                            <tree editable="top">
                                <field name="target_id"/>
                                <field name="date_from"/>
                                <field name="date_to"/>
                            </tree>
                        </field>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>