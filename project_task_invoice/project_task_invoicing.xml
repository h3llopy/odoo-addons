<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="project_task_type_is_delivered_form_view" model="ir.ui.view">
        <field name="name">project_task_type_is_delivered_form_view</field>
        <field name="model">project.task.type</field>
        <field name="inherit_id" ref="project.task_type_edit"/>
        <field name="arch" type="xml">
            <field name="sequence" position="after">
                <field name="is_delivered"/>
            </field>
        </field>
    </record>

    <record id="action_mark_task_as_delivered" model="ir.actions.server">
        <field name="name">Mark as delivered</field>
        <field name="model_id" ref="project.model_project_task"/>
        <field name="state">code</field>
        <field name="code">
            action = model.browse(context['active_ids']).action_mark_as_delivered()
        </field>
    </record>

    <record id="value_mark_task_as_delivered" model="ir.values">
        <field name="key">action</field>
        <field name="key2">client_action_multi</field>
        <field name="model">project.task</field>
        <field name="name">Mark as delivered</field>
        <field name="value" eval="'ir.actions.server,' + str(action_mark_task_as_delivered)"/>
    </record>

    <record id="action_cancel_task_delivery" model="ir.actions.server">
        <field name="name">Cancel delivery</field>
        <field name="model_id" ref="project.model_project_task"/>
        <field name="state">code</field>
        <field name="code">
            action = model.browse(context['active_ids']).action_cancel_delivery()
        </field>
    </record>

    <record id="value_cancel_task_delivery" model="ir.values">
        <field name="key">action</field>
        <field name="key2">client_action_multi</field>
        <field name="model">project.task</field>
        <field name="name">Cancel delivery</field>
        <field name="value" eval="'ir.actions.server,' + str(action_cancel_task_delivery)"/>
    </record>

    <record model="ir.ui.view" id="project_task_tree">
        <field name="name">project_task_tree</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_tree2"/>
        <field name="priority" eval="16"/>
        <field name="arch" type="xml">
            <tree position="inside">
                <field name="time_spent" sum="Total temps vendu"/>
                <field name="date_invoiced"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="task_invoice_search">
        <field name="name">project_task_search</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_search_form"/>
        <field name="priority" eval="999"/>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <search position="inside">
                <filter name="to_mark_as_delivered" string="To Mark as delivered" domain="[('date_delivered', '=', False)]"/>
                <filter name="to_invoice" string="To Invoice" domain="[('date_delivered', '!=', False), ('date_invoiced', '=', False)]"/>
            </search>
            <group expand="0" position="inside">
                <filter string="Invoice Date" name="group_date_invoiced"
                        context="{'group_by':'date_invoiced:month'}"/>
            </group>
        </field>
    </record>

    <record model="ir.ui.view" id="project_task_form_invoicing">
        <field name="name">project_task_form_invoicing</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="priority" eval="16"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Invoicing">
                    <group>
                        <group>
                            <field name="time_spent"/>
                            <field name="stage_is_delivered" invisible="1"/>
                            <field name="project_partner_id" invisible="1"/>
                            <field name="initial_sale_id" string="Sale Order"
                                   context="{'default_partner_id': project_partner_id}"
                                   domain="[('state', '!=', 'cancel'), ('partner_id', '=', project_partner_id)]"/>
                            <field name="initial_sale_line_id" string="Sale Order Line"
                                   context="{
                                   'default_order_id': initial_sale_id,
                                   'default_product_uom_qty': time_spent or planned_days
                                   }"
                                   attrs="{'invisible':[('initial_sale_id', '=', False)]}"
                                   domain="[('order_id', '=', initial_sale_id)]"/>
                            <field name="product_to_invoice_id" attrs="{'invisible': [('initial_sale_line_id', '!=', False)]}"/>
                        </group>
                        <group>
                            <label for="date_delivered"/>
                            <div>
                                <field name="date_delivered"/>
                                <button name="action_cancel_delivery" type="object"
                                        attrs="{'invisible': [('date_delivered', '=', False)]}" class="oe_inline oe_link">
                                    <i class="fa fa-arrow-left"/>
                                    <span>Cancel Delivery Date</span>
                                </button>
                                <button name="action_mark_as_delivered" type="object"
                                        attrs="{'invisible': ['|', ('date_delivered', '!=', False), ('stage_is_delivered', '=', False)]}"
                                        class="oe_inline oe_link">
                                    <i class="fa fa-arrow-right"/>
                                    <span>Mark as delivered</span>
                                </button>
                            </div>
                            <field name="date_invoiced"/>
                        </group>
                    </group>
                </page>
            </notebook>
        </field>
    </record>

    <record id="sale_order_check_qty_alert_form_view" model="ir.ui.view">
        <field name="name">sale_order_check_qty_alert_form_view</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <header position="after">
                <field name="wrong_line_tasks_qty" invisible="1"/>
                <div class="alert alert-warning oe_read_only" role="alert" style="margin-bottom:0px;"
                     attrs="{'invisible':[('wrong_line_tasks_qty', '=', False)]}">
                    <bold>La quantité d'une ligne de vente n'est pas égale à la somme des quantités vendues des tâches
                        liées
                    </bold>
                </div>
            </header>
            <xpath expr="//field[@name='order_line']//tree/field[@name='product_uom_qty']" position="before">
                <field name="initial_tasks_amount"/>
            </xpath>
        </field>
    </record>

    <record id="action_invoice_project_task" model="ir.actions.server">
        <field name="name">To invoice those lines</field>
        <field name="model_id" ref="project.model_project_task"/>
        <field name="state">code</field>
        <field name="code">
            action = model.browse(context['active_ids']).invoice_project_task()
        </field>
    </record>

    <record id="value_invoice_project_task" model="ir.values">
        <field name="key">action</field>
        <field name="key2">client_action_multi</field>
        <field name="model">project.task</field>
        <field name="name">To invoice those lines</field>
        <field name="value" eval="'ir.actions.server,' + str(action_invoice_project_task)"/>
    </record>

    <record id="invoice_project_task_wizard_form_view" model="ir.ui.view">
        <field name="name">invoice_project_task_wizard_form_view</field>
        <field name="model">invoice.project.task.wizard</field>
        <field name="arch" type="xml">
            <form string="To Invoice Tasks">
                <group>
                    <field name="date_invoiced" widget="date"/>
                    <field name="has_new_date"/>
                    <field name="mark_task_as_delivered"/>
                </group>
                <label for="task_ids"/>
                <field name="task_ids">
                    <tree>
                        <field name="project_id"/>
                        <field name="display_name"/>
                        <field name="stage_id"/>
                        <field name="time_spent"/>
                        <field name="date_delivered"/>
                        <field name="date_invoiced"/>
                    </tree>
                </field>
                <footer>
                    <button name="to_invoice_tasks" type="object" string="To Invoice" class="btn-primary"/>
                    <button special="cancel" string="Cancel" class="btn-default"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="task_invoice_tree" model="ir.ui.view">
        <field name="name">Invoicing Tasks</field>
        <field name="model">project.task</field>
        <field name="arch" type="xml">
            <tree create="false">
                <field name="project_id"/>
                <field name="category_id"/>
                <field name="tag_ids"/>
                <field name="display_name"/>
                <field name="stage_id"/>
                <field name="effective_hours"/>
                <field name="time_spent"/>
                <field name="date_delivered"/>
                <field name="date_invoiced"/>
                <field name="initial_sale_id"/>
                <field name="initial_sale_line_id"/>
            </tree>
        </field>
    </record>

    <record id="task_invoice_tree_private" model="ir.ui.view">
        <field name="name">Invoicing Tasks</field>
        <field name="model">project.task</field>
        <field name="arch" type="xml">
            <tree create="false">
                <field name="category_id"/>
                <field name="display_name"/>
                <field name="stage_id"/>
                <field name="effective_hours" sum="Total"/>
                <field name="time_spent" sum="Total"/>
            </tree>
        </field>
    </record>

    <record id="project_task_dashboard_invoice_action" model="ir.actions.act_window">
        <field name="name">Invoicing Tasks</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">project.task</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="project_task_invoice.task_invoice_tree"/>
        <field name="search_view_id" ref="project_task_invoice.task_invoice_search"/>
        <field name="context">{'search_default_project': 1}</field>
        <field name="domain">[('stage_is_delivered', '=', True), ('date_invoiced', '=', False)]</field>
    </record>

    <menuitem id="menu_project_task_dashboard_invoice" name="Facturation des tâches"
              parent="project.menu_main_pm"
              action="project_task_dashboard_invoice_action" sequence="2"/>

    <record model="ir.ui.view" id="sale_order_form_task_invoice">
        <field name="name">sale_order_form_task_invoice</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']//form//field[@name='state']" position="after">
                <div>
                    <label for="initial_task_ids"/>
                    <field name="initial_task_ids" context="{'tree_view_ref': 'project_task_invoice.task_invoice_tree_private'}"/>
                </div>
            </xpath>
        </field>
    </record>

    <record id="sale_order_line_form_view" model="ir.ui.view">
        <field name="name">sale_order_line_form_view</field>
        <field name="model">sale.order.line</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="order_id"/>
                        <field name="product_id"/>
                        <field name="product_uom"/>
                        <field name="product_uom_qty"/>
                        <field name="qty_invoiced"/>
                        <field name="qty_delivered"/>
                    </group>
                    <label for="initial_task_ids"/>
                    <field name="initial_task_ids">
                        <tree>
                            <field name="display_name"/>
                            <field name="stage_id"/>
                            <field name="time_spent"/>
                            <field name="date_delivered"/>
                            <field name="date_invoiced"/>
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

</odoo>