<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_planning_create_view" model="ir.ui.view">
        <field name="name">purchase_planning_create_view</field>
        <field name="model">purchase.planning.wizard</field>
        <field name="arch" type="xml">
            <form string="Forecast">
                <group>
                    <field name="season_id"/>
                    <field name="year_id"/>
                </group>
                <footer>
                    <button name="generate_purchase_forecast" string="Generate" type="object" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="purchase_planning_create_action" model="ir.actions.act_window">
        <field name="name">Create new forecast</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">purchase.planning.wizard</field>
        <field name="view_id" ref="purchase_planning.purchase_planning_create_view"/>
        <field name="view_type">form</field>
        <field name="target">new</field>
        <field name="view_mode">form</field>
    </record>
</odoo>