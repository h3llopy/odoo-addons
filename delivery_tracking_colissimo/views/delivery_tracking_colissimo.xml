<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--DELIVERY.CARRIER-->

    <record id="colissimo_view_delivery_carrier_form" model="ir.ui.view">
        <field name="name">colissimo_view_delivery_carrier_form</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='destination']" position="after">
                <page name="Colissimo" attrs="{'invisible': [('delivery_type', '!=', 'colissimo')]}">
                    <group>
                        <group>
                            <field name="api_login_colissimo"/>
                            <field name="api_password_colissimo"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>