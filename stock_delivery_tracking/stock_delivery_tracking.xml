<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record model="ir.actions.server" id="ir_actions_server_update_delivery_status">
            <field name="name">Update delivery status</field>
            <field name="model_id" ref="stock.model_stock_picking"/>
            <field name="code">
self.update_delivery_status(cr, uid, context.get('active_ids'), False, context)
            </field>
        </record>

        <record model="ir.values" id="ir_value_update_delivery_status">
            <field name="key">action</field>
            <field name="key2">client_action_multi</field>
            <field name="model">stock.picking</field>
            <field name="name">Update delivery status</field>
            <field name="value" eval="'ir.actions.server,'+str(ir_actions_server_update_delivery_status)"/>
        </record>

        <record model="ir.ui.view" id="delivery_tracking_stock_picking_form">
            <field name="name">delivery_tracking_stock_picking_form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page string="Delivery Tracking" groups="stock.group_stock_user">
                        <group string="Information">
                            <field name="transporter_id" class="oe_no_button"
                                   options="{'no_open': True, 'no_create': True}"/>
                            <field name="last_status_update" readonly="1"/>
                        </group>
                        <field name="tracking_ids">
                            <tree name="Delivery Tracking" editable="top">
                                <field name="id" invisible="1"/>
                                <field name="name"/>
                                <field name="transporter_id"/>
                                <field name="date" readonly="1"/>
                                <field name="status" readonly="1"/>
                                <button string="Tracking History" type="object" name="open_status_ids" icon="terp-stock_zoom"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </field>
        </record>

        <record model="ir.ui.view" id="tracking_transporter_kanban">
            <field name="name">tracking.transporter.kanban</field>
            <field name="model">tracking.transporter</field>
            <field name="inherit_id" ref="base_delivery_tracking.tracking_transporter_kanban"/>
            <field name="arch" type="xml">
                <field name="number_trackings" position="after">
                    <field name="number_pickings"/>
                </field>
                <div class="oe_kanban_details" position="inside">
                    <div name="pickings"/>
                </div>
            </field>
        </record>

        <record model="ir.ui.view" id="tracking_number_tree">
            <field name="name">tracking.number.tree</field>
            <field name="model">tracking.number</field>
            <field name="priority" eval="16"/>
            <field name="inherit_id" ref="base_delivery_tracking.tracking_number_tree"/>
            <field name="arch" type="xml">
                 <field name="partner_id" position="after">
                     <field name="picking_id"/>
                     <field name="group_id"/>
                 </field>
            </field>
        </record>

        <record model="ir.ui.view" id="tracking_number_search">
            <field name="name">tracking.number.search</field>
            <field name="model">tracking.number</field>
            <field name="inherit_id" ref="base_delivery_tracking.tracking_number_search"/>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="picking_id"/>
                </field>
                <search position="inside">
                    <filter name="done_pickings" string="Done pickings"
                            domain="[('picking_id.state', '=', 'done')]"/>
                </search>
                <group name="group_by" position="inside">
                    <filter name="picking_id" string="Stock Picking" domain="[]" context="{'group_by': 'picking_id'}"/>
                </group>
            </field>
        </record>

        <record model="ir.ui.view" id="tracking_number_form">
            <field name="name">tracking.number.form</field>
            <field name="model">tracking.number</field>
            <field name="inherit_id" ref="base_delivery_tracking.tracking_number_form"/>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="picking_id" attrs="{'invisible': [('picking_id', '=', False)]}"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="stock_delivery_tracking_transporter_form">
            <field name="name">flux.tracking.transporter.form</field>
            <field name="model">tracking.transporter</field>
            <field name="inherit_id" ref="base_delivery_tracking.tracking_transporter_form"/>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <div class="oe_button_box" position="inside">
                    <button class="oe_stat_button" type="object" name="open_pickings" icon="fa-tasks">
                        <field  string="Picking" name="number_pickings" widget="statinfo"/>
                    </button>
                    <button class="oe_stat_button" type="object" name="open_packages" icon="fa-tasks">
                        <field  string="Package" name="number_pickings" widget="statinfo"/>
                    </button>
                </div>
            </field>
        </record>

        <!-- New menu for delivery tracking data-->
        <menuitem id="menu_delivery_tracking" name="Delivery tracking"
                  parent="stock.menu_stock_root" sequence="3"/>

        <menuitem id="menu_tracking_by_transporter" name="Transporter"
                  action="base_delivery_tracking.act_window_delivery_tracking_transporter"
                  parent="menu_delivery_tracking" sequence="30"/>

        <menuitem id="menu_tracking_numbers" name="Tracking numbers"
                  action="base_delivery_tracking.act_window_delivery_tracking_tracking_number"
                  parent="menu_delivery_tracking" sequence="20"/>
    </data>
</openerp>