        <record id="ndp_consu_type_from" model="ir.ui.view">
            <field name="name">ndp_consu_type_from</field>
            <field name="model">ndp.consu.type</field>
            <field name="arch" type="xml">
                <form string="Consumption type">
                    <sheet>
                        <group>
