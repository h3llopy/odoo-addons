<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="ndp_contract_account_invoice" model="ir.ui.view">
            <field name="name">ndp_contract_account_invoice</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_line']/tree/field[@name='price_unit']" position="after">
                    <field name="billed_period_start"/>
                    <field name="billed_period_end"/>
                </xpath>
            </field>
        </record>

    </data>
</openerp>