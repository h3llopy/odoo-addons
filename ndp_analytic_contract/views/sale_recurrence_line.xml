<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="ndp_sale_recurrence_line_tree" model="ir.ui.view">
            <field name="name">ndp_sale_recurrence_line_tree</field>
            <field name="model">ndp.sale.recurrence.line</field>
            <field name="arch" type="xml">
                <tree string="Sale recurrence lines" editable="top">
                    <field name="product_id"/>
                    <field name="name"/>
                    <field name="standard_price"/>
                    <field name="product_uom_qty"/>
                    <field name="price_unit"/>
                    <field name="product_uom_id" domain="[('category_id', '=', product_uom_categ_id)]"/>
                    <field name="recurrence_id"
                           domain="[('category_id', '=', %(ndp_analytic_contract.product_uom_categ_recurrence)d)]"/>
                    <field name="calendar_type"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="billing_day" invisible="1"/>
                    <field name="true_nbdate"/>
                    <field name="auto_invoice" invisible="1"/>
                    <field name="product_uom_categ_id" invisible="1"/>
                    <button name="open_recurrence_line_form" string="Open" type="object" icon="gtk-go-forward"/>
                </tree>
            </field>
        </record>

        <record id="ndp_sale_recurrence_line_form" model="ir.ui.view">
            <field name="name">"ndp_sale_recurrence_line_form"</field>
            <field name="model">ndp.sale.recurrence.line</field>
            <field name="arch" type="xml">
                <form string="Sale recurrence lines" editable="top">
                    <sheet>
                        <group>
                            <group>
                                <field name="ndp_analytic_contract_id" readonly="True"/>
                                <field name="product_categ_id"/>
                                <field name="product_id"/>
                                <field name="name" string="Description"/>
                                <field name="product_uom_qty"/>
                                <field name="product_uom_id"
                                       domain="[('category_id', '!=', %(ndp_analytic_contract.product_uom_categ_recurrence)d)]"/>
                                <field name="price_unit"/>
                                <field name="analytic_contract_state" invisible="1"/>
                                <field name="sale_id_state" invisible="1"/>
                            </group>
                            <group>
                                <field name="date_start"/>
                                <field name="date_end"/>
                                <field name="recurrence_id"
                                       domain="[('category_id', '=', %(ndp_analytic_contract.product_uom_categ_recurrence)d)]"/>
                                <field name="calendar_type"/>
                                <field name="term"/>
                                <field name="billing_day"/>
                                <field name="true_nbdate"/>
                                <field name="auto_invoice"/>
                            </group>
                        </group>
                    <footer>
                        <button name="dummy_save"
                                string="Apply"
                                type="object"/>
                    </footer>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</openerp>