<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="project_task_charge_config_settings_form" model="ir.ui.view">
            <field name="name">project_task_charge_config_settings_form</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='multi_company']" position='after'>
                        <h2>Task charge</h2>
                     <div class="row mt16 o_settings_container">
                                <div class="col-xs-12 col-md-6 o_setting_box">
                                    <div class="o_setting_right_pane">
                                <field name="calc_min_date"/>
                                <label for="calc_min_date"/>
                            </div>
                        </div>
                        <div class="col-xs-6 col-md-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <field name="calc_max_date"/>
                                <label for="calc_max_date"/>
                            </div>
                        </div>
                     </div>
                </xpath>
            </field>
        </record>
    </data>
</openerp>