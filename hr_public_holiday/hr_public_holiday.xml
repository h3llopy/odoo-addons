<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--Type jour férié-->
    <record id="holiday_status_public" model="hr.holidays.status">
        <field name="name" eval="'Jours fériés '+time.strftime('%Y')"/>
        <field name="limit" eval="True"/>
        <field name="color_name">lavender</field>
    </record>

    <record id="view_hr_holidays_filter_public_holidays" model="ir.ui.view">
        <field name="name">hr.holidays.filter.ndp.public.holidays</field>
        <field name="model">hr.holidays</field>
        <field name="inherit_id" ref="hr_holidays.view_hr_holidays_filter"/>
        <field name="arch" type="xml">
            <filter name="year" position="after">
                <filter name="public_holidays" string="Jours Fériés"
                        domain="[('holiday_status_id', '=', %(holiday_status_public)d)]"/>
            </filter>
        </field>
    </record>

    <record id="public_holiday_search_view" model="ir.ui.view">
        <field name="name">ndp.public.holiday.search.view</field>
        <field name="model">ndp.public.holiday</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="date"/>
                <field name="year"/>
                <field name="holiday_status_id"/>
                <field name="area"/>
            </search>
        </field>
    </record>

    <record id="public_holiday_tree_view" model="ir.ui.view">
        <field name="name">ndp.public.holiday.tree.view</field>
        <field name="model">ndp.public.holiday</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date" widget="date"/>
                <field name="year"/>
                <field name="holiday_status_id"/>
                <field name="area"/>
            </tree>
        </field>
    </record>

    <record id="public_holiday_form_view" model="ir.ui.view">
        <field name="name">ndp.public.holiday.form.view</field>
        <field name="model">ndp.public.holiday</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="date" widget="date"/>
                    <field name="year"/>
                    <field name="holiday_status_id"/>
                    <field name="area"/>
                </group>
            </form>
        </field>
    </record>

    <!--Menu Congés/Configuration-->
    <record id="hr_holidays.menu_hr_holidays_configuration" model="ir.ui.menu">
        <field name="action"/>
    </record>

    <menuitem
            id="menu_hr_holidays_type"
            name="Type"
            parent="hr_holidays.menu_hr_holidays_configuration"
            sequence="0"
            groups="hr_holidays.group_hr_holidays_manager"
            action="hr_holidays.open_view_holiday_status"/>

    <record id="open_view_public_holiday" model="ir.actions.act_window">
        <field name="name">Jours fériés</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ndp.public.holiday</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
            id="menu_hr_holidays_public"
            name="Jours fériés"
            parent="hr_holidays.menu_hr_holidays_configuration"
            sequence="10"
            groups="hr_holidays.group_hr_holidays_manager"
            action="open_view_public_holiday"/>

    <!--Cron-->
    <record model="ir.cron" id="update_public_holidays_cron">
        <field name="name">Jours fériés</field>
        <field name="user_id" ref="base.user_root"/>
        <field name="active" eval="True"/>
        <field name="priority">5</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="nextcall">2020-05-18 04:00:00</field>
        <field name="numbercall">-1</field>
        <field name="doall"/>
        <field name="model">ndp.public.holiday</field>
        <field name="function">update_employees_public_holidays</field>
        <field name="args"/>
    </record>

</odoo>