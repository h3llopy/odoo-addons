<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--DELIVERY.CARRIER-->

    <record id="chronopost_view_delivery_carrier_form" model="ir.ui.view">
        <field name="name">chronopost_view_delivery_carrier_form</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='destination']" position="after">
                <page name="Chronopost" attrs="{'invisible': [('delivery_type', '!=', 'chronopost')]}">
                    <group>
                        <group>
                            <field name="login_chronopost"/>
                            <field name="password_chronopost"/>
                            <field name="pre_alert_chronopost"/>
                            <field name="account_number_chronopost"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
