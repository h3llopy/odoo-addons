<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="account_invoice_dunning_invoice_form" model="ir.ui.view">
        <field name="name">account_invoice_dunning_invoice_form</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group/group/field[@name='date_invoice']" position="after">
                <field name="date_next_dunning"/>
            </xpath>
        </field>
    </record>

</odoo>